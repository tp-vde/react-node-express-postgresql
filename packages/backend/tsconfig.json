{
    "compilerOptions": {
      // Options de compilation
      "target": "es2022",  //Version de JavaScript cible (par exemple, es5, es6, es2020).
      "module": "commonjs", //Système de modules à utiliser (par exemple, commonjs, esnext, amd).
      "outDir": "./dist", //Répertoire de sortie pour les fichiers JavaScript compilés.
      "rootDir": "./", //Répertoire racine des fichiers TypeScript.
      "strict": true, //Active toutes les vérifications strictes de TypeScript.
      "esModuleInterop": true, //Permet une meilleure interopérabilité avec les modules CommonJS.
      "skipLibCheck": true, //Ignore la vérification des fichiers de déclaration (*.d.ts).
      "forceConsistentCasingInFileNames": true,
      //Options pour les chemins et les modules
      "moduleResolution": "node", //Stratégie de résolution des modules (node, classic).
      "baseUrl": ".", //Répertoire de base pour résoudre les modules.
      "paths": { //Mappage des chemins d'importation personnalisés.
        // "*": ["node_modules/*", ],
        "@/*": ["./src/*","./*"]
      }
    },
    //Options pour la vérification de type
    "include": ["./**/*", "**/*.ts"], // Fichiers ou répertoires à inclure
    "exclude": ["node_modules"] // Fichiers ou répertoires à exclure
  }