{
  "name": "backend",
  "description": "Monorepo with React frontend and Node Express backend",
  "version": "0.0.0",
  "main": "dist/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "mocha --exit tests/*",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "nodemon --no-warnings dist/server.js",
    "start:watch": "yarn build && concurrently \"yarn build:watch\" \"yarn start\"",
    "dev": "ts-node ./server.ts",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/fs-extra": "^11.0.4",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.1",
    "@types/pg-format": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^10.2.0",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "express-session": "^1.18.1",
    "fs-extra": "^11.3.0",
    "generate-password": "^1.7.1",
    "jose": "^6.0.8",
    "knex": "^3.1.0",
    "luxon": "^3.5.0",
    "nodemailer": "^6.10.0",
    "nodemon": "^3.1.9",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.3.0",
    "pg-format": "^1.0.4",
    "sequelize": "^6.37.5",
    "serialize-error": "^12.0.0",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "yaml": "^2.7.0"
  }
}
